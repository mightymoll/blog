<h1>New Article</h1>

<%= form_with model: @article do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
		<%# display error message if not validated %>
		<% @article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
			<% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
		<%# display error message if not validated %>
		<% @article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>