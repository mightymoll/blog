<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<%= link_to "Edit Article", edit_article_path(@article) %>
<br>
<%= link_to "Delete this Article", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>

<h2>Comments</h2>
<%# list of comments associated with the article using _comment.html.erb %>
<%# display 'no comments' if none have been created %>
   <% if @article.comments.empty? %>
        <p>no comments</p>
			<% else %>
				<%= render @article.comments %>
   <% end %>

<h2>Add a comment:</h2>
<%# use form partial in comments folder (_form.html.erb) %>
<%= render "comments/form", article: @article %>